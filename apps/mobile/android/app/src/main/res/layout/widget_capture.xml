<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/widget_background"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerebro Diem"
        android:textColor="#6750A4"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/widget_voice_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_mic"
            android:background="@drawable/widget_button_primary"
            android:contentDescription="Voice capture"
            android:scaleType="center"
            android:layout_marginEnd="16dp" />

        <ImageButton
            android:id="@+id/widget_text_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_keyboard"
            android:background="@drawable/widget_button_secondary"
            android:contentDescription="Text capture"
            android:scaleType="center" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick Capture"
        android:textColor="#49454F"
        android:textSize="12sp"
        android:layout_marginTop="8dp" />

</LinearLayout>
